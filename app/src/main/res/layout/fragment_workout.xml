<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/workout_fragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workout.WorkoutFragment"
    android:orientation="vertical">

    <com.fhostert.gymtracker.helper.TimerBar
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/exercise_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/vertical_margin_between_boxes">
                <Button
                    android:id="@+id/add_exercise_button"
                    android:layout_height="@dimen/large_button_height"
                    android:text="@string/addExercise"
                    style="@style/largeButton"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>